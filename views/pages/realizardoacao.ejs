<!DOCTYPE html>
<html lang="pt-br">

<%- include("../partials/head"); %>

<body>

  <%- include("../partials/menu"); %>

  <div class="doacao-container">
    <h1>Realizar Doação</h1>

    <form action="/realizardoacao" method="POST">

      <label for="turma">Turma:</label>

      <select name="turma" required>
        <% turmas.forEach(turma => { %>
          <option value="<%= turma.sigla %>">
            <%= turma.sigla %> - <%= turma.docente %>
          </option>
        <% }) %>
      </select>

      <label for="item">Item:</label>

      <select name="item" id="item" required>
        <option value="" disabled selected>Selecione o item</option>
        <% roupas.forEach((roupa) => { %>
          <option value="<%= roupa.descricao %>">
            <%= roupa.descricao %> - <%= roupa.pontos %> ponto(s)
          </option>
        <% }); %>
      </select>

      <label for="quantidade">Quantidade:</label>
      <input type="number" id="quantidade" name="quantidade" min="1" max="99" 
        value="<%= Math.floor(Math.random() * 99) + 1 %>"required> <!--Genial - Quantidade Mínima-->

      <button type="submit">Doar</button>
    </form>
  </div>

  <div class="voltar">
    <a href="/doacoes_doar"><img src="https://cdn-icons-png.flaticon.com/512/5935/5935366.png" 
      alt="Voltar" id="img-v"></a>
  </div>

<%- include("../partials/footer"); %> 

</body>
</html>